pipeline {
    agent {
        docker {
            image 'node:16-alpine'
            label 'node-container'
        }
    }
    stages {
        stage('Check Node Version') {
            steps {
                script {
                    sh 'node --version'
                }
            }
        }
    }
    post {
        success {
            echo 'Node.js version checked successfully.'
        }
        failure {
            echo 'Failed to check Node.js version.'
        }
    }
}
