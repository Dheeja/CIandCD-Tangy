pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Clone the repository that contains the HTML file
                git 'https://github.com/Dheeja/CIandCD-Tangy.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building...'
                // Add build steps if necessary
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying...'
                // Deploy the HTML file to your web server or desired location
                // For example, copy the file to a specific directory
                sh 'cp index.html /var/www/html'
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
